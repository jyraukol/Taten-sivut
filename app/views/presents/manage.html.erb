<h2>Lahjojen hallinnointi</h2>

<ul id="manageFunctions">
  <li><%= link_to "Lisää uusi", new_present_path %></li>
  <li><%= link_to 'Palaa', presents_index_path, :class => "back_link" %></li>
</ul>

<table id="presents_table">
  <thead>
    <th>Lahja</th>
    <th>Varaaja</th>
    <th></th>
    <th />
  </thead>
  <tbody>
 
    <% for present in @presents %>
      <tr>

        <td> <%= present.name %> </td>
        <td>
          <% if present.reserver != nil %>
            <%= User.find(present.reserver).username %>
          <% end %> 
        </td>
      <td>
        <%= link_to "Muokkaa", edit_present_path(present) %> </td>
      <td>
        <%= link_to "Poista", present, :method => :delete %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>

