  <tbody>
  <% for present in @presents %>
    <tr>
      <td><%= present.name %></td>
      <td><%= present.description %></td> 
      <td> 
    <% if present.reserved == true %>
      True
    <% else %>
      False
    <% end %>
  </td> 
  <% if @current_user.admin == true %>
  <td> <%= User.find(present.reserver).username %> </td>
      <td><%= link_to 'Reserve', reserve_path(:present => present.id) %></td>
      <td><%= link_to "Edit", edit_present_path(present) %> </td>
      <td><a href="link">Destroy </a></td>
    <% end %>
    </tr>
<% end %>
  </tbody>
</table>

