<!DOCTYPE html>
<html>
<head>
  <title>Taru ja Ville 2012</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrapper">
  <div id="header">
    <%= image_tag("headerImage.jpg") %>
  <div id="user_nav">
    <% if current_user %>
      <%= link_to "Etusivu", root_path %>
      <%= link_to "Kirkko & juhlapaikka", "#" %>
      <%= link_to "Lahjalista", presents_path %>
      <%= link_to "Ilmoittautuminen", "#" %>
      <%= link_to "Log out", log_out_path %>
    <% end %>
  </div>
</div>
<div id="content">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>
    <%= yield %>
  </div>
</div>
</body>
</html>
